<Window x:Class="CheevoFight.ViewPlusViewModel.Windows.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheevoFight.ViewPlusViewModel.Windows"
        xmlns:tools="clr-namespace:CheevoFight.ViewPlusViewModel.Converters"
        mc:Ignorable="d"
        Name="ProgressBarWindow" 
        Title="CheevoFight"
        Width="Auto"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <tools:GetProductGivenFactors x:Key="getProductGivenFactors"/>
    </Window.Resources>
    <Window.MaxHeight>
        <Binding Source="{x:Static SystemParameters.MaximizedPrimaryScreenHeight}"
            Converter="{StaticResource getProductGivenFactors}"
            ConverterParameter="0.9"/>
    </Window.MaxHeight>
    <Window.MaxWidth>
        <Binding Source="{x:Static SystemParameters.MaximizedPrimaryScreenWidth}"
            Converter="{StaticResource getProductGivenFactors}"
            ConverterParameter="0.9"/>
    </Window.MaxWidth>
    <ScrollViewer VerticalScrollBarVisibility="Disabled">
        <Grid Margin="20,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ListView
                ItemsSource="{Binding ProgressBars, UpdateSourceTrigger=PropertyChanged}"
                MaxHeight="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight},
                    Converter={StaticResource getProductGivenFactors},
                    ConverterParameter=0.85}"
                MaxWidth="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenWidth},
                    Converter={StaticResource getProductGivenFactors},
                    ConverterParameter=0.85}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock
                                Text="{Binding Path=TextBlockContent, UpdateSourceTrigger=PropertyChanged}"
                                Height="Auto"
                                Width="Auto"
                                FontSize="28" FontFamily="Arial"/>
                            <ProgressBar
                                Value="{Binding Path=ProgressBarValue, UpdateSourceTrigger=PropertyChanged}"
                                Maximum="{Binding Path=ProgressBarMaximum, UpdateSourceTrigger=PropertyChanged}"
                                Orientation="Horizontal"
                                IsIndeterminate="False"
                                Height="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight},
                                    Converter={StaticResource getProductGivenFactors},
                                    ConverterParameter=0.09}"
                                Width="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenWidth},
                                    Converter={StaticResource getProductGivenFactors},
                                    ConverterParameter=0.65}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ScrollViewer>
</Window>

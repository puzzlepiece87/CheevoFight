<Window x:Class="CheevoFight.ViewPlusViewModel.Windows.Results"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cheevofight="clr-namespace:CheevoFight.ViewPlusViewModel" d:DataContext="{d:DesignInstance Type=cheevofight:ViewModel}"
        xmlns:local="clr-namespace:CheevoFight.ViewPlusViewModel.Windows"
        xmlns:tools="clr-namespace:CheevoFight.ViewPlusViewModel.Converters"
        mc:Ignorable="d"
        Name="ResultsWindow" 
        Title="CheevoFight"
        Width="Auto"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <tools:GetProductGivenFactors x:Key="getProductGivenFactors"/>
        <tools:GetResultsProgressBarColor x:Key="getResultsProgressBarColor"/>
        <tools:GetResultsProgressBarValueColumn0 x:Key="getResultsProgressBarValueColumn0"/>
        <tools:GetResultsProgressBarValueColumn1 x:Key="getResultsProgressBarValueColumn1"/>
        <tools:GetResultsProgressBarAngle x:Key="getResultsProgressBarAngle"/>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="Background" Value="Yellow"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition
            MaxHeight="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight},
                    Converter={StaticResource getProductGivenFactors},
                    ConverterParameter=0.10}"/>
            <RowDefinition
                MaxHeight="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight},
                    Converter={StaticResource getProductGivenFactors},
                    ConverterParameter=0.81}"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition MaxHeight="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0"
                    Text="Search:"
                    FontFamily="Arial" FontSize="28"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                    Name="TextBoxSearch"
                    TextChanged="TextBoxSearch_TextChanged"/>
            </Grid>
            <ComboBox Grid.Row="0" Grid.Column="2"
                Margin="20,0,0,0"
                Name="ComboBoxFriendSelector"
                ItemsSource="{Binding AvatarsBySteamName}"
                SelectionChanged="ComboBoxFriendSelector_SelectionChanged"
                IsTextSearchEnabled="True" TextSearch.TextPath="Key" IsEditable="True"
                FontSize="22" FontFamily="Arial">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
                <ComboBox.ItemTemplate>
                    <ItemContainerTemplate>
                        <StackPanel
                            Orientation="Horizontal">
                            <Image
                                Source="{Binding Path=Value.Source}"
                                HorizontalAlignment="Left"/>
                            <TextBlock Grid.Column="1"
                                Text="{Binding Path=Key}"
                                FontSize="22" FontFamily="Arial"/>
                        </StackPanel>
                    </ItemContainerTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>
        <ScrollViewer Grid.Row="1"
            Height="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight},
                Converter={StaticResource getProductGivenFactors},
                ConverterParameter=0.81}"
            VerticalScrollBarVisibility="Visible">
            <ListView 
                ItemsSource="{Binding SearchResults, UpdateSourceTrigger=PropertyChanged}"
                MaxHeight="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight},
                    Converter={StaticResource getProductGivenFactors},
                    ConverterParameter=0.79}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Grid Margin="5,10,5,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition 
                                        Width="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenWidth},
                                        Converter={StaticResource getProductGivenFactors},
                                        ConverterParameter=0.10}"/>
                                    <ColumnDefinition 
                                        Width="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenWidth},
                                        Converter={StaticResource getProductGivenFactors},
                                        ConverterParameter=0.10}"/>
                                    <ColumnDefinition 
                                        Width="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenWidth},
                                        Converter={StaticResource getProductGivenFactors},
                                        ConverterParameter=0.28}"/>
                                    <ColumnDefinition Width="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenWidth},
                                        Converter={StaticResource getProductGivenFactors},
                                        ConverterParameter=0.38}"/>
                                </Grid.ColumnDefinitions>
                                <ProgressBar Grid.Column="0"
                                    Value="{Binding Path=ProgressBarValue, UpdateSourceTrigger=PropertyChanged,
                                        Converter={StaticResource getResultsProgressBarValueColumn0},
                                        ConverterParameter=ProgressBarValue}"
                                    Maximum="50"
                                    Orientation="Horizontal"
                                    IsIndeterminate="False"
                                    Foreground="{Binding Path=ProgressBarValue,
                                        Converter={StaticResource getResultsProgressBarColor},
                                        ConverterParameter=ProgressBarValue}"
                                    Height="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight},
                                        Converter={StaticResource getProductGivenFactors},
                                        ConverterParameter=0.025}"
                                    Width="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenWidth},
                                        Converter={StaticResource getProductGivenFactors},
                                        ConverterParameter=0.10}">
                                    <ProgressBar.LayoutTransform>
                                        <RotateTransform Angle="{Binding Path=ProgressBarValue, UpdateSourceTrigger=PropertyChanged,
                                        Converter={StaticResource getResultsProgressBarAngle},
                                        ConverterParameter=ProgressBarValue}"/>
                                    </ProgressBar.LayoutTransform>
                                </ProgressBar>
                                <ProgressBar Grid.Column="1"
                                    Value="{Binding Path=ProgressBarValue, UpdateSourceTrigger=PropertyChanged,
                                        Converter={StaticResource getResultsProgressBarValueColumn1},
                                        ConverterParameter=ProgressBarValue}"
                                    Maximum="50"
                                    Orientation="Horizontal"
                                    IsIndeterminate="False"
                                    Foreground="{Binding Path=ProgressBarValue,
                                        Converter={StaticResource getResultsProgressBarColor},
                                        ConverterParameter=ProgressBarValue}"
                                    Height="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight},
                                        Converter={StaticResource getProductGivenFactors},
                                        ConverterParameter=0.025}"
                                    Width="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenWidth},
                                        Converter={StaticResource getProductGivenFactors},
                                        ConverterParameter=0.10}">
                                    <ProgressBar.LayoutTransform>
                                        <RotateTransform Angle="{Binding Path=ProgressBarValue, UpdateSourceTrigger=PropertyChanged,
                                        Converter={StaticResource getResultsProgressBarAngle},
                                        ConverterParameter=ProgressBarValue}"/>
                                    </ProgressBar.LayoutTransform>
                                </ProgressBar>
                                <TextBlock Grid.Column="2"
                                    Margin="10"
                                    Text="{Binding Path=TagTextBlockContent, UpdateSourceTrigger=PropertyChanged}"
                                    Height="Auto"
                                    Width="Auto"
                                    FontSize="28" FontFamily="Arial"/>
                                <ScrollViewer Grid.Column="3"
                                    HorizontalScrollBarVisibility="Auto"
                                    VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl
                                        ItemsSource="{Binding Path=CapsuleImages, UpdateSourceTrigger=PropertyChanged}"
                                        MaxHeight="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight},
                                            Converter={StaticResource getProductGivenFactors},
                                            ConverterParameter=0.05}"
                                        HorizontalAlignment="Left">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel IsItemsHost="True"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Window>
